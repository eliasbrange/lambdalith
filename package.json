{
	"name": "lambdalith",
	"description": "A tiny event router for AWS Lambda functions. Route SQS, SNS, EventBridge, and DynamoDB Streams events with a fluent API.",
	"version": "0.2.1",
	"author": "Elias Brange",
	"keywords": [
		"aws",
		"lambda",
		"events",
		"router",
		"sqs",
		"sns",
		"eventbridge",
		"dynamodb",
		"serverless"
	],
	"type": "module",
	"files": [
		"dist"
	],
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			},
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			}
		},
		"./package.json": "./package.json"
	},
	"homepage": "https://github.com/eliasbrange/lambdalith#readme",
	"bugs": {
		"url": "https://github.com/eliasbrange/lambdalith/issues"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/eliasbrange/lambdalith.git"
	},
	"scripts": {
		"build": "bunup",
		"dev": "bunup --watch",
		"prepare": "bun simple-git-hooks",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"release": "bumpp --commit --push --tag",
		"test": "bun test",
		"test:coverage": "bun test --coverage",
		"test:watch": "bun test --watch",
		"typecheck": "tsc --noEmit"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@commitlint/cli": "^20.3.1",
		"@commitlint/config-conventional": "^20.3.1",
		"@types/aws-lambda": "^8.10.159",
		"@types/bun": "^1.3.6",
		"bumpp": "^10.4.0",
		"bunup": "^0.16.20",
		"simple-git-hooks": "^2.13.1",
		"typescript": "^5.9.3"
	},
	"peerDependencies": {
		"typescript": ">=4.5.0"
	},
	"peerDependenciesMeta": {
		"typescript": {
			"optional": true
		}
	},
	"simple-git-hooks": {
		"pre-commit": "bun run lint && bun run typecheck",
		"commit-msg": "bunx commitlint --edit $1",
		"pre-push": "bun test"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	}
}
